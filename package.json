{
  "name": "hls-js-playback",
  "version": "0.0.1",
  "description": "Clappr HLS playback based on hls.js",
  "main": "dist/hls-js-playback.js",
  "scripts": {
    "build": "node_modules/.bin/webpack --progress",
    "release": "node_modules/.bin/webpack --progress -d --optimize-minimize --optimize-dedupe --output-filename hls-js-playback.js",
    "start": "node_modules/.bin/webpack-dev-server --content-base public/ --output-public-path /latest --hot",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "node_modules/.bin/webpack --progress --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/clappr/hls-js-playback.git"
  },
  "keywords": [
    "clappr",
    "playback",
    "hls"
  ],
  "author": "Clappr team",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/clappr/hls-js-playback.git/issues"
  },
  "homepage": "https://github.com/clappr/hls-js-playback.git#readme",
  "devDependencies": {
    "babel-core": "^6.10.4",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-classes": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "clappr": "^0.2.58",
    "clean-webpack-plugin": "^0.1.9",
    "webpack": "^2.5.0",
    "webpack-dev-server": "^2.4.5"
  }
}
